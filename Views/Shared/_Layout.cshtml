@{
    var appTitle = "Contract Monthly Claim System";
    var userName = Context.Session.GetString("UserFullName");
    var userRole = Context.Session.GetString("UserRole");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@appTitle - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="site-header">
        <div class="container">
            <h1>@appTitle</h1>
            <nav>
                <a asp-controller="Home" asp-action="Index">Home</a>
                @if (!string.IsNullOrEmpty(userName))
                {
                    <span class="user-info">
                        <span class="user-name">@userName</span>
                        <span class="user-role">(@userRole)</span>
                    </span>
                }
                @if (ViewData["Title"] is string title && !string.Equals(title, "Welcome", StringComparison.OrdinalIgnoreCase))
                {
                    <span class="current-page">/ @title</span>
                }
            </nav>
        </div>
    </header>
    <main class="container">
        @RenderBody()
    </main>
    
    @RenderSection("Scripts", required: false)
</body>
</html>